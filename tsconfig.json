{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES5",
        "jsx": "react",
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "alwaysStrict": true,
        "strictFunctionTypes": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "lib": [
            "ES2015",
            "DOM"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
