{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2018",
        "jsx": "react",
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "alwaysStrict": true,
        "strictFunctionTypes": true,
        "strict": true
    },
    "include": [
        "./src/**/*"
    ]
}
