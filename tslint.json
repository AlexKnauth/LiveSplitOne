{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "object-literal-sort-keys": false
    },
    "linterOptions": {
        "exclude": [
            "src/livesplit-core/**",
            "src/type-definitions/**"
        ]
    },
    "rules": {
        "semicolon": [
            true,
            "always",
            "ignore-interfaces"
        ],
        "interface-name": [
            false
        ],
        "max-classes-per-file": [
            false
        ],
        "no-shadowed-variable": false,
        "object-literal-sort-keys": [
            false
        ],
        "no-invalid-this": [
            true
        ],
        "no-unused-expression": [
            true
        ],
        "no-var-keyword": true,
        "prefer-object-spread": true,
        "ordered-imports": false,
        "variable-name": [
            "check-format",
            "allow-leading-underscores"
        ],
        "array-type": false
    },
    "rulesDirectory": []
}
